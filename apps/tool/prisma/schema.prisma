// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  surname  String
  password String
}

model languages {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  code       String       @unique @db.VarChar(2)
  roles      roles[]
  templates  templates[]
  categories categories[]
}

model roles {
  id                Int                  @id @default(autoincrement())
  name              String
  model             String               @default("gpt-3.5-turbo")
  top_p             Float                @default(1)
  system            role_systems_promps?
  language          languages            @relation(fields: [language_id], references: [id], onDelete: Cascade)
  language_id       Int
  temperature       Float                @default(1)
  present_penalty   Float                @default(0)
  frequency_penalty Float                @default(0)
}

model role_systems_promps {
  id      Int    @id @default(autoincrement())
  role    roles  @relation(fields: [role_id], references: [id], onDelete: Cascade)
  role_id Int    @unique
  content String
}

model templates {
  id                Int                @id @default(autoincrement())
  name              String
  context           context_messages[]
  category          categories         @relation(fields: [category_id], references: [id], onDelete: Cascade)
  category_id       Int
  language          languages          @relation(fields: [language_id], references: [id], onDelete: Cascade)
  language_id       Int
  model             String             @default("gpt-3.5-turbo")
  top_p             Float              @default(1)
  temperature       Float              @default(1)
  present_penalty   Float              @default(0)
  frequency_penalty Float              @default(0)
}

model context_messages {
  id          Int       @id @default(autoincrement())
  role        String
  content     String
  template    templates @relation(fields: [template_id], references: [id], onDelete: Cascade)
  template_id Int
}

model categories {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  language    languages   @relation(fields: [language_id], references: [id], onDelete: Cascade)
  language_id Int
  templates   templates[]
}
